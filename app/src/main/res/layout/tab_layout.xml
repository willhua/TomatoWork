<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bottom_height"
              android:orientation="horizontal"
              android:gravity="center_vertical"
    android:background="@color/color500">

        <TextView
            android:id="@+id/tab_candy_list"
            android:layout_height="match_parent"
            android:text="@string/candy_list"
            style="@style/TabTextView"/>

        <TextView
            android:id="@+id/tab_note_list"
            android:text="@string/note_list"
            style="@style/TabTextView"/>

        <TextView
            android:id="@+id/tab_statistics"
            android:text="@string/tab_statisticd"
            style="@style/TabTextView"/>

        <TextView
            android:id="@+id/tab_user"
            android:text="@string/tab_user"
            style="@style/TabTextView"/>
</LinearLayout>
