<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_add_note_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/btn_ok"/>

    <Button
        android:id="@+id/btn_add_note_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/btn_cancle"/>

    <EditText
        android:id="@+id/et_add_note_describe"
        android:hint="@string/add_note_describe"
        android:layout_alignParentTop="true"
        android:layout_above="@id/btn_add_note_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>