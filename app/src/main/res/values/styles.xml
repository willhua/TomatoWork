<resources>

    <!-- Base application theme. -->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/textsize_middle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TomatoFinishPopupAnim">
        <item name="android:windowEnterAnimation">@anim/tomato_finish_enter</item>
        <item name="android:windowExitAnimation">@anim/tomato_finish_exit</item>
    </style>

</resources>
